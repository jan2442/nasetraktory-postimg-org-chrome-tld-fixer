{
    "name":             "Nasetraktory.eu forum postimg TLD fixer",
    "version":          "1.0",
    "description":      "This extension replaces postimg.org to postimg.cc in content!",
    "permissions": [
        "http://www.nasetraktory.eu/forum/*"
    ],
	"icons": { "16": "icon16.png",
			   "48": "icon48.png",
			  "128": "icon128.png" },
    "content_scripts": [
        {
            "matches": ["http://www.nasetraktory.eu/forum/*"],
            "js": ["background.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2
}